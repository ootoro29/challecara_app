<%= form_with(model: [group,book,q_page]) do |form| %>
  <% if q_page.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(q_page.errors.count, "error") %> prohibited this q_page from being saved:</h2>

      <ul>
        <% q_page.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.hidden_field :book_id, :value => @book.id %>
  </div>

  <div>
    <%= form.hidden_field :writer_id, :value => current_user.id %>
  </div>

  <%= hidden_field_tag :group_id, @group.id %>
  <%= hidden_field_tag :book_id, @book.id %>
  <%= hidden_field_tag :q_page_id, @q_page.id %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
